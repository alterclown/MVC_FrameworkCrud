@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>First_Name</th>
        <th>Last_Name</th>
        <th>Email_Id</th>
        <th>City</th>
        <th>Country</th>
        <th>Action</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
    <tr>
        <td>@Model.Rows[i][1]</td>
        <td>@Model.Rows[i][2]</td>
        <td>@Model.Rows[i][3]</td>
        <td>@Model.Rows[i][4]</td>
        <td>@Model.Rows[i][5]</td>
        <td>
            <a href="@Url.Action("Edit","Employee",new {@id= @Model.Rows[i][0]})">
                Edit
            </a>
            <a href="@Url.Action("Delete","Employee",new {@id= @Model.Rows[i][0]})">
                Delete
            </a>
        </td>
    </tr>
    }

</table>
<a href="@Url.Action("Create","Employee")"> Add Employee</a>